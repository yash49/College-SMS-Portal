<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>

		<property name="hibernate.connection.url">jdbc:mysql://localhost/smsportal</property>

		<property name="hibernate.connection.username">root</property>

		<property name="hibernate.connection.password">root</property>

		<property name="hibernate.connection.pool_size">10</property>
		
		<property name="show_sql">true</property>

		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<property name="hibernate.hbm2ddl.auto">update</property>
		
		<mapping resource="vo/BranchVO.hbm.xml"></mapping>
		<mapping resource="vo/ClassVO.hbm.xml"></mapping>
		<mapping resource="vo/SemesterVO.hbm.xml"></mapping>
		<mapping resource="vo/DesignationVO.hbm.xml"></mapping>
		<mapping resource="vo/LoginVO.hbm.xml"></mapping>
		<mapping resource="vo/StaffVO.hbm.xml"></mapping>
		<mapping resource="vo/SenderIdVO.hbm.xml"></mapping>
		<mapping resource="vo/StudentVO.hbm.xml"></mapping>
		<mapping resource="vo/SmsTemplateVO.hbm.xml"></mapping>
		<mapping resource="vo/ComplainVO.hbm.xml"></mapping>
		<mapping resource="vo/FeedbackVO.hbm.xml"></mapping>
		<mapping resource="vo/GroupNamesVO.hbm.xml"></mapping>
		<mapping resource="vo/GroupMembersVO.hbm.xml"></mapping>
		<mapping resource="vo/SmsHistoryVO.hbm.xml"></mapping>
		<mapping resource="vo/FutureSmsVO.hbm.xml"></mapping>
		
	</session-factory>
	
	
		

</hibernate-configuration>